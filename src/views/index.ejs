    <body>
        <% if ( products.length > 0 ) { %>
            <% for (let product of products) { %>
                
                <p><%= product.name %></p>

                <form method="post" action="/cart/add-product">
                    <input type="hidden" name="id" value="<%= product.id %>">
                    <button type="submit">Add to Cart</button>
                </form>

            <% }%>
        <% } else { %>
            <p>Nenhum produto encontrado.</p>
        <% } %>
        
